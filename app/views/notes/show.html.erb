<h2 class=" px-3  text-center pt-2 mt-2"><%= @note.head%></h2>
<div class="d-flex flex-column flex-wrap justify-content-center align-items-center pt-3 mt-1 off-white">
  <div class="d-flex flex-row flex-wrap justify-content-center pt-1 mt-1 off-white">
      <div class="bg-light border-0 card m-4 shadow d-flex flex-column justify-content-between" style="min-width: 18rem; height: auto;">
          <div class="card-body d-flex flex-column align-items-center">
            <p class="card-text text-dark mx-1 text-left"><%= @note.body.empty? ? 'No Details' : @note.body %></p>
            <div class="d-flex flex-row flex-wrap justify-content-start align-items-center">
              <button class="btn btn-info btn-sm p-1 m-1 rounded border-0 font-weight-bold"> <%= @note.deadline ? @note.deadline.strftime('%d %b %Y %I:%M %p') : 'No Deadline' %> </button>
            </div>
          </div>
        <div class="d-flex flex-row justify-content-between align-items-center m-2">
          <%= link_to label_path(@note.label), class: "btn btn-dark btn-sm p-1 m-1 rounded border-0 font-weight-bold text-light" do %>
            <%= @note.label.title.truncate(10) %>
          <%end%>
          <div class="d-flex flex-row justify-content-end align-items-center m-2">
            <%= link_to 'Edit', edit_note_path(@note), class: "btn btn-success btn-sm p-1 m-1 rounded border-0 font-weight-bold text-light" %>
            <%= link_to 'Delete', note_path(@note), method: :delete, data: {confirm: 'Delete chosen note PERMANENTLY?'}, class: "btn btn-danger btn-sm p-1 m-1 rounded border-0 font-weight-bold text-light" %>
          </div>
        </div>
    </div>
  </div>
