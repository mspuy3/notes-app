<h2 class=" px-3  text-center pt-2 mt-2">All Labels</h2>
<div class="d-flex flex-row flex-wrap justify-content-center pt-1 mt-1 off-white">
  <% @labels.each do |label| %>
    <div class="bg-dark border-0 card m-4 shadow d-flex flex-column justify-content-between" style="width: 18rem; height: auto;">
      <%= link_to label_path(label), class: "btn" do %>
        <div class="card-body d-flex flex-column align-items-center">
          <h4 class="card-head pb-1 text-light text-left"><%= label.title.truncate(15) %></h4>
          <p class="card-text text-light mx-1 text-left"> <%= label.notes.empty? ? 'No associated Note/s' : 'Click to see associated Note/s'%> </p>
        </div>
      <% end %>
      <div class="d-flex flex-row justify-content-center align-items-center m-2">
        <%= link_to 'Edit', edit_label_path(label), class: "btn btn-success btn-sm p-1 m-1 rounded border-0 font-weight-bold text-light" %>
        <%= link_to 'Delete', label_path(label), method: :delete, data: {confirm: 'Delete chosen label and associated notes PERMANENTLY?'}, class: "btn btn-danger btn-sm p-1 m-1 rounded border-0 font-weight-bold text-light" %>
      </div>
    </div>
  <% end %>
</div>
