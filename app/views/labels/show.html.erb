<h2 class=" px-3  text-center pt-2 mt-2"><%= @label.title%></h2>
<div class="d-flex flex-row justify-content-center align-items-center m-2">
  <%= link_to 'Edit', edit_label_path(@label), class: "btn btn-success btn-sm p-1 m-1 rounded border-0 font-weight-bold text-light" %>
  <%= link_to 'Delete', label_path(@label), method: :delete, data: {confirm: 'Delete chosen label and associated notes PERMANENTLY?'}, class: "btn btn-danger btn-sm p-1 m-1 rounded border-0 font-weight-bold text-light" %>
</div>
<h4 class="text-center"> <%= @label.notes.empty? ? 'No associated Note/s' : ''%> </h4>
<div class="d-flex flex-row flex-wrap justify-content-center pt-1 mt-1 off-white">
  <% @label.notes.each do |note| %>
    <div class="bg-light border-0 card m-4 shadow d-flex flex-column justify-content-between" style="width: 18rem; height: auto;">
      <%= link_to note_path(note), class: "btn" do %>
        <div class="card-body d-flex flex-column align-items-center">
          <h4 class="card-head pb-1 text-dark text-left"><%= note.head.truncate(15) %></h4>
          <p class="card-text text-muted mx-1 text-left"><%= note.body.empty? ? 'No Details' : 'Click to see Details' %></p>
          <div class="d-flex flex-row flex-wrap justify-content-start align-items-center">
            <button class="btn btn-info btn-sm p-1 m-1 rounded border-0 font-weight-bold"> <%= note.deadline ? note.deadline.strftime('%d %b %Y %I:%M %p') : 'No Deadline' %> </button>
          </div>
        </div>
      <% end %>
      <div class="d-flex flex-row justify-content-center align-items-center m-2">
        <%= link_to 'Edit', edit_note_path(note), class: "btn btn-success btn-sm p-1 m-1 rounded border-0 font-weight-bold text-light" %>
        <%= link_to 'Delete', note_path(note), method: :delete, data: {confirm: 'Delete chosen note PERMANENTLY?'}, class: "btn btn-danger btn-sm p-1 m-1 rounded border-0 font-weight-bold text-light" %>
      </div>
    </div>
  <% end %>
</div>
